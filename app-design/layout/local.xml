<?xml version="1.0"?>
<layout>
    <default>
        <update handle="page_one_column" />
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <filename>css/reset.css</filename>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <filename>css/960.css</filename>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <filename>css/3aart.css</filename>
            </action>
        </reference>
        <reference name="header">
            <block type="core/template" name="header.account" template="customer/header/account.phtml"/>
            <block type="page/html_wrapper" name="header.secondary-navigation">
                <action method="setElementId"><elementId>header-sec-nav</elementId></action>
                <block type="page/template_links" name="header.secondary-navigation.links">
                    <action method="addLink" translate="label title">
                        <label>Sitemap</label>
                        <url>/sitemap</url>
                        <title>Sitemap</title>
                        <prepare/>
                        <urlParams/>
                        <position>10</position>
                    </action>
                    <action method="addLink" translate="label title">
                        <label>Impressum/Kontakt</label>
                        <url>/impressum</url>
                        <title>Impressum und Kontakt</title>
                        <prepare/>
                        <urlParams/>
                        <position>20</position>
                    </action>
                    <action method="addLink" translate="label title">
                        <label>AGB</label>
                        <url>/agb</url>
                        <title>Allgemeine Gesch√§ftsbedingungen</title>
                        <prepare/>
                        <urlParams/>
                        <position>30</position>
                    </action>
                    <action method="addLink" translate="label title">
                        <label>Datenschutz</label>
                        <url>/datenschutz</url>
                        <title>Datenschutz</title>
                        <prepare/>
                        <urlParams/>
                        <position>40</position>
                    </action>
                    <action method="addLink" translate="label title">
                        <label>Gutscheine</label>
                        <url>/gutscheine</url>
                        <title>Gutscheine</title>
                        <prepare/>
                        <urlParams/>
                        <position>50</position>
                    </action>
                </block>
            </block>

            <!-- block type="cms/block" name="header.secondary-navigation">
                <action method="setBlockId">
                    <blockid>secondary-navigation</blockid>
                </action>
            </block -->
            <action method="insert">
                <blockname>cart.sidebar</blockname>
            </action>
        </reference>

        <reference name="store_language">
            <action method="setTemplate">
                <template>page/switch/flyout-flags.phtml</template>
            </action>
        </reference>

        <reference name="footer">
            <block type="cms/block" name="footer.shipping">
                <action method="setBlockId">
                    <blockid>footer.shipping</blockid>
                </action>
            </block>
            <block type="cms/block" name="footer.payments">
                <action method="setBlockId">
                    <blockid>footer.payments</blockid>
                </action>
            </block>
            <block type="core/template" name="footer.socialnetworks" template="page/html/footer-socialnetworks.phtml">
                <block type="core/template" name="footer.socialnetworks.youtube"
                       template="page/html/footer-socialnetworks/youtube.phtml"/>
                <block type="core/template" name="footer.socialnetworks.facebook"
                       template="page/html/footer-socialnetworks/facebook.phtml"/>
            </block>

            <action method="insert">
                <blockname>header.secondary-navigation</blockname>
            </action>
        </reference>
    </default>
    <page_one_column_small_stage>
        <label>All One-Column Layout Pages with small Stage</label>
        <reference name="root">
            <action method="setTemplate"><template>page/1column-smallstage.phtml</template></action>
            <!-- Mark root page block that template is applied -->
            <action method="setIsHandle"><applied>1</applied></action>
        </reference>
    </page_one_column_small_stage>
    <page_one_column_big_stage>
        <label>All One-Column Layout Pages with big Stage</label>
        <reference name="root">
            <action method="setTemplate"><template>page/1column-bigstage.phtml</template></action>
            <!-- Mark root page block that template is applied -->
            <action method="setIsHandle"><applied>1</applied></action>
        </reference>
    </page_one_column_big_stage>
</layout>